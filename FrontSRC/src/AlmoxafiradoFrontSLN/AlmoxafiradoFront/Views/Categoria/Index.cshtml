<div class="cabecalho">
    <div class="logo">
        <img src="/images/logo.png" alt="Logo" height="35" />
        <span class="nome-empresa">Almoxarifado Central</span>
    </div>
    <div class="perfil">
        @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

        <span class="pessoa">@HttpContextAccessor.HttpContext.Session.GetString("UsuarioLogado")</span>
        <button class="loginlogoff" onclick="location.href='/'">Logoff</button>
    </div>
</div>

<div id="container" class="containerCategoria">
    <div class="container1Categoria">
        <div>
            <a class="btnCategoriaV " href="/Home/Dashboard">
                Voltar
            </a>
        </div>
    </div>
    <div class="container2Categoria">
        <table class="TableContainerCategoria">
            <thead class="theadCategoria">
            <th>
                Código
            </th>
            <th>
                Descrição
            </th>
            <th>
                Opções
            </th>
            </thead>
            <tbody>

                @foreach (var item in ViewBag.Categorias)
                {
                    <tr>
                        <td class="tdCategoria">@item.codigo</td>
                        <td class="tdCategoria">@item.descricao</td>
                        <td class="tdCategoria">
                            <div class="IconesContainerCategoria">
                                <div class="Icone1Categoria">
                                    <a class="trash-btn">
                                        <div class="fas fa-trash"></div>
                                    </a>
                                </div>
                                <div class="Icone2Categoria">
                                    <a class="edit-button">
                                        <div class="fas fa-edit"></div>
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>


        </table>
    </div>
    <div class="containerCategoria">
        <div>
            <a class="btnCategoria" href="/Categoria/Create">
                Novo
            </a>
        </div>
    </div>
</div>



