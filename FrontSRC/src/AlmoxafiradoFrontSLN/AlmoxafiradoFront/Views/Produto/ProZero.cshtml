<div class="cabecalho">
    <div class="logo">
        <img src="/images/logo.png" alt="Logo" height="35" />
        <span class="nome-empresa">Almoxarifado Central</span>
    </div>
    <div class="perfil">
        @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

        <span class="pessoa">@HttpContextAccessor.HttpContext.Session.GetString("UsuarioLogado")</span>
        <button class="loginlogoff" onclick="location.href='/'">Logoff</button>
    </div>
</div>

<div id="container" class="containerPro">
    <div class="container1Pro">
        <div>
            <a class="btnPro" href="/Produto/Create">
                Novo
            </a>
        </div>
    </div>
    <div class="container2Pro">
        <table class="TableContainerPro">
            <thead class="theadPro">
            <th>
                Código
            </th>
            <th>
                Descrição
            </th>
            <th>
                Unidade de Medida
            </th>
            <th>
                Estoque Atual
            </th>
            <th>
                Epermanente
            </th>
            <th>
                Codigo da Categoria
            </th>
            ,
            <th>
                Opções
            </th>
            </thead>
            <tbody>

                @foreach (var item in ViewBag.Produtos)
                {
                    <tr>
                        <td class="tdPro">@item.codigo</td>
                        <td class="tdPro">@item.descricao</td>
                        <td class="tdPro">@item.unidadeMedida</td>
                        <td class="tdPro">@item.estoqueAtual</td>
                        <td class="tdPro">@item.epermanente</td>
                        <td class="tdPro">@item.codigoCategoria</td>
                        <td class="tdPro">
                            <div class="IconesContainerPro">
                                <div class="Icone1Pro">
                                    <a class="trash-btn">
                                        <div class="fas fa-trash"></div>
                                    </a>
                                </div>
                                <div class="Icone2Pro">
                                    <a class="edit-button">
                                        <div class="fas fa-edit"></div>
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>


        </table>
    </div>
    <div class="container3Pro">
        <div>
            <a class="btnPro " href="/Produto">
                Voltar
            </a>
        </div>
    </div>
</div>

