<div class="cabecalho">
    <div class="logo">
        <img src="/images/logo.png" alt="Logo" height="35" />
        <span class="nome-empresa">Almoxarifado Central</span>
    </div>
    <div class="perfil">
        @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

        <span class="pessoa">@HttpContextAccessor.HttpContext.Session.GetString("UsuarioLogado")</span>
        <button class="loginlogoff" onclick="location.href='/'">Logoff</button>
    </div>
</div>

<div id="container" class="containerFor">
    <div class="container1For">
        <div>
            <a class="btnProV " href="/Home/Dashboard">
                Voltar
            </a>
        </div>
    </div>
    <div class="container2For">
        <table class="TableContainerFor">
            <thead class="theadFor">

            <th>
                Codigo
            </th>
            <th>
                Nome
            </th>
            <th>
                Telefone
            </th>
            <th>
                Estado
            </th>
            <th>
                Cidade
            </th>
            <th>
                CNPJ
            </th>
            <th>
                Opções
            </th>
            </thead>
            <tbody>

                @foreach (var item in ViewBag.Fornecedor)
                {
                    <tr>
                        <td class="tdFor">@item.codigo</td>
                        <td class="tdFor">@item.nome</td>
                        <td class="tdFor">@item.telefone</td>
                        <td class="tdFor">@item.estado</td>
                        <td class="tdFor">@item.cidade</td>
                        <td class="tdFor">@item.cnpj</td>
                        <td class="tdFor">
                            <div class="IconesContainerFor">
                                <div class="Icone1For">
                                    <a class="trash-btn">
                                        <div class="fas fa-trash"></div>
                                    </a>
                                </div>
                                <div class="Icone2For">
                                    <a class="edit-button">
                                        <div class="fas fa-edit"></div>
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>


        </table>
    </div>
    <div class="containerFor">
        <div>
            <a class="btnFor" href="/Fornecedor/Create">
                Novo
            </a>
        </div>
    </div>
</div>

