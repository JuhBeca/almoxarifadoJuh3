<div class="cabecalho">
    <div class="logo">
        <img src="/images/logo.png" alt="Logo" height="35" />
        <span class="nome-empresa">Almoxarifado Central</span>
    </div>
    <div class="perfil">
        @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

        <span class="pessoa">@HttpContextAccessor.HttpContext.Session.GetString("UsuarioLogado")</span>
        <button class="loginlogoff" onclick="location.href='/'">Logoff</button>
    </div>
</div>

<div id="container" class="containerSai">
    <div class="container1Sai">
        <div>
            <a class="btnProV " href="/Home/Dashboard">
                Voltar
            </a>
        </div>
    </div>
    <div class="container2Sai">
        <table class="TableContainerSai">
            <thead class="theadSai">
            <th>
                Código
            </th>
            <th>
                Data da Saida
            </th>
            <th>
                Codigo da Secretaria
            </th>
            <th>
                Codigo do Produto
            </th>
            <th>
                Preço do Produto
            </th>
            <th>
                Preço total
            </th>
            <th>
                Quantidade
            </th>
            <th>
                Observações
            </th>
            <th>
                Opções
            </th>
            </thead>
            <tbody>

                @foreach (var item in ViewBag.Saidas)
                {
                    <tr>
                        <td class="tdSai">@item.codigo</td>
                        <td class="tdSai">@item.dataSaida</td>
                        <td class="tdSai">@item.codigoSecretaria</td>
                        <td class="tdEnt">@item.codigoProduto</td>
                        <td class="tdEnt">@item.precoProduto</td>
                        <td class="tdEnt">@item.precoTotal</td>
                        <td class="tdEnt">@item.quantidade</td>
                        <td class="tdSai">@item.observacao</td>
                        <td class="tdSai">
                            <div class="IconesContainerSai">
                                <div class="Icone1Sai">
                                    <a class="trash-btn">
                                        <div class="fas fa-trash"></div>
                                    </a>
                                </div>
                                <div class="Icone2Sai">
                                    <a class="edit-button">
                                        <div class="fas fa-edit"></div>
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>


        </table>
    </div>
    <div class="containerSai">
        <div>
            <a class="btnSai" href="/Saida/Create">
                Novo
            </a>
        </div>
    </div>
</div>
