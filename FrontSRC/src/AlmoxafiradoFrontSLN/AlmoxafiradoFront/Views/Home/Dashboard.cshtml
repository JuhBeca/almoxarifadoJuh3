
    @{
        ViewData["Title"] = "Painel do Almoxarifado";
    }


<div class="tela-cheia">
    <div class="cabecalho">
        <div class="logo">
            <img src="/images/logo.png" alt="Logo" height="35" />
            <span class="nome-empresa">Almoxarifado Central</span>
        </div>
        <div class="perfil">
            @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

            <span class="pessoa">@HttpContextAccessor.HttpContext.Session.GetString("UsuarioLogado")</span>
            <button class="loginlogoff" onclick="location.href='/'">Logoff</button>
        </div>
    </div>
        <div class="container">

<div class="painel-home">
    <h1 class="display-4">Bem-vindo ao Almoxarifado</h1>
    <p class="subtitulo">Selecione uma das opções abaixo para começar</p>

    <div class="atalhos">
        <a class="card-atalho" href="/Categoria"><i class="fas fa-tags"></i><span>Categoria</span></a>
        <a class="card-atalho" href="/Produto"><i class="fas fa-box"></i><span>Produto</span></a>
        <a class="card-atalho" href="/Entrada"><i class="fas fa-arrow-down"></i><span>Entrada</span></a>
        <a class="card-atalho" href="/Saida"><i class="fas fa-arrow-up"></i><span>Saída</span></a>
        <a class="card-atalho" href="/Fornecedor"><i class="fas fa-truck"></i><span>Fornecedor</span></a>
        <a class="card-atalho" href="/Secretaria"><i class="fas fa-building"></i><span>Secretaria</span></a>
    </div>

    <div class="indicadores">
        <div class="indicador">
            <h4>Itens Baixo Estoque</h4>
            <p>12 produtos abaixo do nível mínimo</p>
        </div>
        <div class="indicador">
            <h4>Movimentações Hoje</h4>
            <p>Entradas: 5 | Saídas: 7</p>
        </div>
        <div class="indicador">
            <h4>Estoque Total</h4>
            <p>+350 itens em estoque</p>
        </div>
    </div>
        </div>

        </div>
</div>

