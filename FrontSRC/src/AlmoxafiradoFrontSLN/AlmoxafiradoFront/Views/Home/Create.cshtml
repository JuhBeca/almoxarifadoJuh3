<div class="centralizado">

   <div class="login-container">
       <h2>Cadastro de Usuário</h2>

       <form action="/Home/Cadastro" method="post">
            <input type="text" name="nome" id="nome" placeholder="Nome completo" required />
            <input type="text" name="email" placeholder="E-mail" required />
            <input type="text" name="nomeUsuario" id="nomeUsuario" placeholder="Nome de usuário" required />
            <input type="password" name="senha" id="senha" placeholder="Senha" required />

        <button type="submit" class="login">Cadastrar</button>
       </form>

    <div class="link">
        <p>Já possui uma conta? <a href="/Home/Index">Fazer login</a></p>
    </div>
   </div>
</div>

