<div class="cabecalho">
    <div class="logo">
        <img src="/images/logo.png" alt="Logo" height="35" />
        <span class="nome-empresa">Almoxarifado Central</span>
    </div>
    <div class="perfil">
        @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

        <span class="pessoa">@HttpContextAccessor.HttpContext.Session.GetString("UsuarioLogado")</span>
        <button class="loginlogoff" onclick="location.href='/'">Logoff</button>
    </div>
</div>

<div id="container" class="containerSec">
    <div class="container1Sec">
        <div>
            <a class="btnProV " href="/Home/Dashboard">
                Voltar
            </a>
        </div>
    </div>
    <div class="container2Sec">
        <table class="TableContainerSec">
            <thead class="theadSec">
            <th>
                Codigo
            </th>
            <th>
                Nome
            </th>
            <th>
                Telefone
            </th>
            <th>
                Estado
            </th>
            <th>
                Cidade
            </th>
            <th>
                CNPJ
            </th>
            <th>
                Opções
            </th>
            </thead>
            <tbody>

                @foreach (var item in ViewBag.Secretaria)
                {
                    <tr>
                        <td class="tdSec">@item.codigo</td>
                        <td class="tdSec">@item.nome</td>
                        <td class="tdSec">@item.telefone</td>
                        <td class="tdSec">@item.estado</td>
                        <td class="tdSec">@item.cidade</td>
                        <td class="tdSec">@item.cnpj</td>
                        <td class="tdSec">
                            <div class="IconesContainerSec">
                                <div class="Icone1Sec">
                                    <a class="trash-btn">
                                        <div class="fas fa-trash"></div>
                                    </a>
                                </div>
                                <div class="Icone2Sec">
                                    <a class="edit-button">
                                        <div class="fas fa-edit"></div>
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>


        </table>
    </div>
    <div class="containerSec">
        <div>
            <a class="btnSec" href="/Secretaria/Create">
                Novo
            </a>
            <a class="btnSec" href="/Secretaria/Rank">
                Top10 Clientes
            </a>
        </div>
    </div>
</div>
